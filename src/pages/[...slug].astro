---
import { getEntry } from "astro:content";
const { slug } = Astro.params;

// If there's no slug, we're on the index page
if (slug === undefined) {
  // TODO: Should render index page
  return Astro.rewrite("/404");
}
// First, try to get the entry from the "notes" collection if it exists
// This is mostly for the sake of local development.
const entry = await getEntry("notes", slug);

// 3. Redirect if the entry does not exist
if (entry === undefined) {
  return Astro.rewrite("/404");
}

// 4. (Optional) Render the entry to HTML in the template
const { Content } = await entry.render();

export const prerender = false;
---

<Content />
