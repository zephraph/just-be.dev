{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
      "baseUrl": ".",
      "types": [".astro/types.d.ts", "src/types.d.ts"],
      "paths": {
        "~/*": ["./src/*"],
        "@components/*": ["src/components/*"],
        "@layouts/*": ["src/layouts/*"],
        "@just-be/*": ["packages/*"],
      }
    },
    "exclude": ["node_modules", "dist", "scripts"]
}